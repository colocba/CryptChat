<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.amirbaum.cryptchat.ProfileActivity"
    android:background="@color/fui_bgPhone">

    <ImageView
        android:id="@+id/profile_image_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/user_place_holder"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/profile_image_view"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/profile_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="User Name"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profile_status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textAlignment="center"
            android:textSize="25sp" />

    </LinearLayout>

    <Button
        android:id="@+id/decline_friendship_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/send_request_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        android:text="Decline friendship"
        android:background="@drawable/cool_button"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/send_request_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="37dp"
        android:text="REQUEST FRIENDSHIP"
        android:textAlignment="center"
        android:background="@drawable/cool_button"
        android:textColor="#FFFFFF"/>


</RelativeLayout>
