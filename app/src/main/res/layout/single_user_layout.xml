<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/user_place_holder"
        android:id="@+id/single_request_image" />

    <TextView
        android:id="@+id/single_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/single_request_image"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/single_request_image"
        android:text="Display name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/single_user_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/single_user_name"
        android:layout_below="@+id/single_user_name"
        android:layout_marginRight="0dp"
        android:layout_marginTop="12dp"
        android:text="Display status" />

    <ImageView
        android:id="@+id/user_single_online_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/single_user_name"
        android:layout_marginStart="22dp"
        android:layout_toEndOf="@+id/single_user_name"
        android:visibility="invisible"
        app:srcCompat="@android:drawable/presence_online" />
</RelativeLayout>